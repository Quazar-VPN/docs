{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "Quazar-VPN/docs",
    "rootDir": "docs"
  },
  "files": [
    {
      "location": ".vitepress/config/{en,ru,uk,fa}.ts",
      "pattern": ".vitepress/config/@lang.ts",
      "type": "universal"
    },
    {
      "location": "**/*.md",
      "pattern": "@lang/@path",
      "type": "universal"
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "Русский",
      "lang": "ru"
    },
    {
      "label": "Українська",
      "lang": "uk"
    },
    {
      "label": "فارسی",
      "lang": "fa"
    }
  ],
  "outDir": ".vitepress/dist/_translations",
  "ignoreKeywords": ["lunaria-ignore"]
}